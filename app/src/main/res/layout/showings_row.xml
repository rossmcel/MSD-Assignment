<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/ShowingLeftRowItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/ShowingMiddleLeftRowItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/ShowingLeftRowItem"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/ShowingMiddleRightRowItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/ShowingMiddleLeftRowItem"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/ShowingRightRowItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/ShowingMiddleRightRowItem"
        android:textSize="22sp"/>
</LinearLayout>